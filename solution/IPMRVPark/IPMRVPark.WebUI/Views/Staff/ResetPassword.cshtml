@model  IEnumerable<IPMRVPark.Models.staff_view>
@{
    ViewBag.Title = "Reset Staff Password";
    ViewBag.PageTitle = "Reset Staff Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row top-margin" style="margin-left:5px">
        <table>
            <thead style="border:1px solid green">
                <tr>
                    <th>
                        <label style="margin:10px">Full Name</label>
                    </th>
                    <th>
                        <label style="margin:10px">Main Phone</label>
                    </th>
            </thead>
            @foreach (var item in Model)
            {
                <tbody style="border:1px dotted green">
                    <tr>
                        <td>
                            @Html.DisplayFor(modelitem => item.fullName, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.mainPhone, new { style = "margin: 10px;" })
                        </td>
                        <td style="border-top:none">
                            <div class="dropdown pull-right">
                                <a href="@Url.Action("ResetPassword", "Login", new { personID = item.id })" class="btn btn-default margin-top-10">
                                    Reset Password
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
