@model  IEnumerable<IPMRVPark.Models.customer_view>

@{
    ViewBag.Title = "Customer Index";
    ViewBag.PageTitle = "Customer List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top-margin">
    <p>
        <a href="@Url.Action("CreateCustomer", "Customer")" class="btn btn-default margin-top-10" style="margin-left:10px">
            Customer Registration
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </a>
    </p>
</div>
<div class="container-fluid">
    <div class="row top-margin" style="margin-left:1px">
        <table>
            <thead style="border:1px solid green">
                <tr>
                    <th>
                        <label style="margin:10px">Full Name</label>
                    </th>
                    <th>
                        <label style="margin:10px">Main Name</label>
                    </th>
                    <th>
                        <label style="margin:10px">Cell Phone</label>
                    </th>
                    <th>
                        <label style="margin:10px">Home Phone</label>
                    </th>
                    <th>
                        <label style="margin:10px">Fax Number</label>
                    </th>
                    <th>
                        <label style="margin:10px">E-mail</label>
                    </th>
                    <th rowspan="2">
                        <label style="margin:10px">Actions</label>
                    </th>
                </tr>
                <tr>
                    <th>
                        <label style="margin:10px">Street</label>
                    </th>
                    <th>
                        <label style="margin:10px">City</label>
                    </th>
                    <th>
                        <label style="margin:10px">Postal Code</label>
                    </th>
                    <th>
                        <label style="margin:10px">Province</label>
                    </th>
                    <th>
                        <label style="margin:10px">Country</label>
                    </th>
                    <th>
                        <label style="margin:10px">Comments</label>
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
{
                <tbody style="border:1px dotted green">
                    <tr>
                        <td>
                            @Html.DisplayFor(modelitem => item.fullName, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.mainPhone, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.cellPhone, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.homePhone, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.faxNumber, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.email, new { style = "margin: 10px;" })
                        </td>
                        <td style="border-top:none" rowspan="2">
                            <div class="dropdown pull-right">
                                <button class="btn btn-block dropdown-toggle" aria-expanded="false" type="button" data-toggle="dropdown">
                                    Action
                                    <span class="collapsible"></span>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="@Url.Action("CustomerDetails", "Customer", new { id = item.id }) " class=" btn btn-default margin-top-10">
                                            Details
                                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("EditCustomer", "Customer", new { id = item.id }) " class=" btn btn-default margin-top-10">
                                            Edit&nbsp;
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    @*<li>
                                        <a href="@Url.Action("DeleteCustomer", "Customer", new { id = item.id }) " class=" btn btn-default margin-top-10">
                                            Remove
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        </a>
                                    </li>*@
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelitem => item.street, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.city, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.postalCode, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.provinceName, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.countryName, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.comments, new { style = "margin: 10px;" })
                        </td>
                    </tr>
                </tbody>
}
        </table>
    </div>
</div>
