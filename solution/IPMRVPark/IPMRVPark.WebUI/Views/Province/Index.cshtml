@model  IEnumerable<IPMRVPark.Models.province_view>

@{
    ViewBag.Title = "Province List";
    ViewBag.PageTitle = "Province List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="top-margin">
    <p>
        <a href="@Url.Action("CreateProvince", "Province")" class="btn btn-default margin-top-10" style="margin-left:10px">
            Add Province
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </a>
    </p>
</div>

<div class="container-fluid">
    <div class="row top-margin" style="margin-left:5px">
        <table>
            <thead style="border:1px solid green">
                <tr>
                    <th>
                        <label style="margin:10px">Province Code</label>
                    </th>
                    <th>
                        <label style="margin:10px">Province Name</label>
                    </th>
                    <th>
                        <label style="margin:10px">Country Code</label>
                    </th>
                    <th>
                        <label style="margin:10px">Country Name</label>
                    </th>
                    <th>
                        <label style="margin:10px">Actions</label>
                    </th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                                   <tbody style="border:1px dotted green">
                    <tr>
                        <td>
                            @Html.DisplayFor(modelitem => item.provinceCode, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.provinceName, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.countryCode, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.countryName, new { style = "margin: 10px;" })
                        </td>
                        <td style="border-top:none">
                            <div class="dropdown pull-right">
                                <button class="btn btn-block dropdown-toggle" aria-expanded="false" type="button" data-toggle="dropdown">
                                    Action
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="@Url.Action("ProvinceDetails", "Province", new { id = item.provinceCode }) " class=" btn btn-default margin-top-10">
                                            Details
                                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("EditProvince", "Province", new { id = item.provinceCode }) " class=" btn btn-default margin-top-10">
                                            Edit&nbsp;
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                                       </tbody>
                }

</table>
    </div>
</div>
